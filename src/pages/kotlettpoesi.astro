---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPoems = await getCollection('poetry');
const slamPoems = allPoems.filter(poem => poem.data.type === 'slam');
const classicPoems = allPoems.filter(poem => poem.data.type === 'klassisk');
const haikuPoems = allPoems.filter(poem => poem.data.type === 'haiku');
---

<Layout title="Kotlettpoesi - Kotlett.se">
    <div class="container">
        <h1>Kotlettpoesi</h1>
        <p class="subtitle">Dikter, poetry slam och haikudikter om den ädla kotletten</p>

        <section class="poetry-section">
            <h2>Poetry Slam</h2>
            <div class="poem-container slam">
                {await Promise.all(slamPoems.map(async (poem) => {
                    const { Content } = await poem.render();
                    return (
                        <div class="poem">
                            <h3>{poem.data.title}</h3>
                            <div class="poem-text">
                                <Content />
                            </div>
                        </div>
                    );
                }))}
            </div>
        </section>

        <section class="poetry-section">
            <h2>Klassiska Dikter</h2>
            <div class="poem-container classic">
                {await Promise.all(classicPoems.map(async (poem) => {
                    const { Content } = await poem.render();
                    return (
                        <div class="poem">
                            <h3>{poem.data.title}</h3>
                            <div class="poem-text">
                                <Content />
                            </div>
                        </div>
                    );
                }))}
            </div>
        </section>

        <section class="poetry-section">
            <h2>Haiku</h2>
            <div class="poem-container haiku">
                {await Promise.all(haikuPoems.map(async (poem) => {
                    const { Content } = await poem.render();
                    return (
                        <div class="haiku-poem">
                            <div class="poem-text">
                                <Content />
                            </div>
                        </div>
                    );
                }))}
            </div>
        </section>

        <section class="poetry-section submission-section">
            <h2>Skicka in din egen Kotlettpoesi</h2>
            <p class="intro">
                Har du skrivit en dikt, slam eller haiku om kotletter? Dela med dig av ditt verk till oss!
            </p>

            <div id="form-message" class="form-message hidden"></div>

            <form
                name="kotlettpoesi"
                method="POST"
                data-netlify="true"
                netlify-honeypot="bot-field"
                class="poetry-form"
                id="poetry-form"
            >
                <input type="hidden" name="form-name" value="kotlettpoesi" />
                <p class="hidden">
                    <label>
                        Don't fill this out if you're human: <input name="bot-field" />
                    </label>
                </p>

                <div class="form-group">
                    <label for="name">Ditt namn *</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        placeholder="T.ex. Anders Andersson"
                    />
                </div>

                <div class="form-group">
                    <label for="poem-type">Typ av dikt *</label>
                    <select id="poem-type" name="poem-type" required>
                        <option value="">Välj typ...</option>
                        <option value="haiku">Haiku</option>
                        <option value="klassisk">Klassisk dikt</option>
                        <option value="slam">Poetry Slam</option>
                        <option value="smorsang">Smörsång</option>
                        <option value="annat">Annat</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="poem-title">Titel på dikten *</label>
                    <input
                        type="text"
                        id="poem-title"
                        name="poem-title"
                        required
                        placeholder="T.ex. Ode till den perfekta kotletten"
                    />
                </div>

                <div class="form-group">
                    <label for="poem-text">Din dikt *</label>
                    <textarea
                        id="poem-text"
                        name="poem-text"
                        rows="10"
                        required
                        placeholder="Skriv din dikt här...&#10;&#10;Tips: Tryck Enter för ny rad"
                    ></textarea>
                </div>

                <div class="form-group">
                    <label for="comments">Övriga kommentarer (frivilligt)</label>
                    <textarea
                        id="comments"
                        name="comments"
                        rows="3"
                        placeholder="Bakgrund, inspiration, eller något annat du vill dela med dig av..."
                    ></textarea>
                </div>

                <button type="submit" class="submit-btn">
                    Skicka in min Kotlettpoesi
                </button>

                <p class="form-note">
                    * = Obligatoriskt fält. Vi granskar alla inskick innan publicering.
                </p>
            </form>
        </section>

        <div class="back-link">
            <a href="/" class="home-btn">Tillbaka till Startsidan</a>
        </div>
    </div>
</Layout>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('poetry-form') as HTMLFormElement;
        const formMessage = document.getElementById('form-message') as HTMLDivElement;

        if (form && formMessage) {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                const formData = new FormData(form);
                const submitBtn = form.querySelector('.submit-btn') as HTMLButtonElement;

                // Disable submit button
                if (submitBtn) {
                    submitBtn.disabled = true;
                    submitBtn.textContent = 'Skickar...';
                }

                try {
                    const response = await fetch('/', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: new URLSearchParams(formData as any).toString(),
                    });

                    if (response.ok) {
                        // Success
                        formMessage.textContent = '✅ Tack! Din kotlettpoesi har skickats in och kommer att granskas.';
                        formMessage.className = 'form-message success';
                        form.reset();

                        // Scroll to message
                        formMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    } else {
                        throw new Error('Form submission failed');
                    }
                } catch (error) {
                    // Error
                    formMessage.textContent = '❌ Något gick fel. Försök igen senare.';
                    formMessage.className = 'form-message error';
                    formMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
                } finally {
                    // Re-enable submit button
                    if (submitBtn) {
                        submitBtn.disabled = false;
                        submitBtn.textContent = 'Skicka in min Kotlettpoesi';
                    }
                }
            });
        }
    });
</script>

<style>
    html {
        scroll-behavior: smooth;
    }

    .container {
        max-width: 1200px;
    }

    h1 {
        color: #8b2e0b;
        font-family: 'Bebas Neue', sans-serif;
        font-size: 3.5rem;
        text-align: center;
        margin-bottom: 0.5rem;
        letter-spacing: 3px;
        text-transform: uppercase;
    }

    .subtitle {
        text-align: center;
        color: #5d3a1a;
        margin-bottom: 3rem;
        font-size: 1.3rem;
        font-weight: 400;
        font-style: italic;
        letter-spacing: 1px;
        border-bottom: 2px solid #8b5a2b;
        padding-bottom: 1.5rem;
    }

    .poetry-section {
        margin-bottom: 4rem;
    }

    .poetry-section h2 {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 2.5rem;
        color: #8b2e0b;
        margin-bottom: 1.5rem;
        letter-spacing: 2px;
        text-transform: uppercase;
        border-left: 6px solid #8b5a2b;
        padding-left: 1rem;
    }

    .poem-container {
        display: grid;
        gap: 2rem;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    }

    .poem-container.haiku {
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }

    .poem {
        background: rgba(139, 90, 43, 0.08);
        padding: 2rem;
        border: 3px dashed #8b5a2b;
        border-radius: 4px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .poem:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .poem h3 {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.8rem;
        color: #8b2e0b;
        margin-bottom: 1rem;
        letter-spacing: 1.5px;
        text-align: center;
        border-bottom: 2px solid #8b5a2b;
        padding-bottom: 0.5rem;
    }

    .poem-text {
        color: #5d3a1a;
        font-size: 1.1rem;
        line-height: 1.8;
        font-style: italic;
        white-space: pre-line;
    }

    .poem-text :global(p) {
        margin: 0.25rem 0;
    }

    .poem-text :global(p:empty) {
        margin: 0.75rem 0;
    }

    .poem-text br {
        display: block;
        content: "";
        margin-top: 0.5rem;
    }

    .slam .poem-text {
        font-size: 1.15rem;
        line-height: 1.9;
        font-weight: 500;
    }

    .haiku-poem {
        background: rgba(139, 90, 43, 0.08);
        padding: 1.5rem;
        border: 3px dashed #8b5a2b;
        border-radius: 4px;
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s;
        min-height: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .haiku-poem:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .haiku-poem .poem-text {
        font-size: 1.15rem;
        line-height: 2;
        color: #5d3a1a;
        font-weight: 600;
    }

    .back-link {
        margin-top: 3rem;
        text-align: center;
    }

    /* Form Styles */
    .submission-section .intro {
        text-align: center;
        margin-bottom: 2rem;
    }

    .form-message {
        max-width: 700px;
        margin: 0 auto 2rem auto;
        padding: 1.5rem;
        border-radius: 4px;
        font-size: 1.1rem;
        font-weight: 600;
        text-align: center;
        border: 3px solid;
        transition: all 0.3s;
    }

    .form-message.success {
        background: rgba(76, 175, 80, 0.1);
        border-color: #4CAF50;
        color: #2e7d32;
    }

    .form-message.error {
        background: rgba(244, 67, 54, 0.1);
        border-color: #f44336;
        color: #c62828;
    }

    .form-message.hidden {
        display: none;
    }

    .poetry-form {
        max-width: 700px;
        margin: 0 auto;
        background: rgba(139, 90, 43, 0.08);
        padding: 2rem;
        border: 3px dashed #8b5a2b;
        border-radius: 4px;
    }

    .hidden {
        display: none;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        color: #8b2e0b;
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 3px solid #8b5a2b;
        border-radius: 4px;
        font-size: 1rem;
        font-family: 'Oswald', sans-serif;
        background: #fffef9;
        color: #5d3a1a;
        transition: border-color 0.3s;
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: #8b2e0b;
        box-shadow: 0 0 0 3px rgba(139, 46, 11, 0.2);
    }

    .form-group textarea {
        resize: vertical;
        min-height: 100px;
        line-height: 1.6;
    }

    .form-group select {
        cursor: pointer;
    }

    .submit-btn {
        width: 100%;
        padding: 1rem 2rem;
        background: #8b2e0b;
        color: #f5f1e8;
        border: 3px solid #5d1f08;
        border-radius: 4px;
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.3rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.2s;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .submit-btn:hover {
        background: #a83b14;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .submit-btn:active {
        transform: translateY(0);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .form-note {
        margin-top: 1rem;
        text-align: center;
        color: #5d3a1a;
        font-size: 0.9rem;
        font-style: italic;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }

        .subtitle {
            font-size: 1.1rem;
        }

        .poetry-section h2 {
            font-size: 2rem;
        }

        .poem {
            padding: 1.5rem;
        }

        .poem h3 {
            font-size: 1.5rem;
        }

        .poem-text {
            font-size: 1rem;
        }

        .haiku-poem .poem-text {
            font-size: 1rem;
        }

        .poem-container {
            grid-template-columns: 1fr;
        }

        .poem-container.haiku {
            grid-template-columns: 1fr;
        }

        .poetry-form {
            padding: 1.5rem;
        }

        .form-group label {
            font-size: 1rem;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            font-size: 0.95rem;
        }

        .submit-btn {
            font-size: 1.1rem;
            padding: 0.9rem 1.5rem;
        }
    }
</style>
